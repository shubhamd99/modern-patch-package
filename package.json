{
  "name": "modern-patch-package",
  "version": "1.0.1",
  "description": "A modern patch package that works with npm, pnpm, and Yarn (all versions). Create and apply patches to npm dependencies instantly.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "dist/cli.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist"
  },
  "keywords": [
    "patch",
    "dependencies",
    "npm",
    "pnpm",
    "yarn",
    "package-manager",
    "dependencies-fix",
    "node-modules"
  ],
  "author": "shubhamd99 <shubham.dhage@outlook.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shubhamd99/modern-patch-package.git"
  },
  "bugs": {
    "url": "https://github.com/shubhamd99/modern-patch-package/issues"
  },
  "homepage": "https://github.com/shubhamd99/modern-patch-package#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  }
}
